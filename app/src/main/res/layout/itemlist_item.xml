<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/standard_padding"
    android:paddingRight="@dimen/standard_padding"
    android:paddingLeft="@dimen/standard_padding"
    android:paddingBottom="@dimen/small_padding">


    <TextView
        android:id="@+id/itemlist_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize_headline"
        android:textColor="@color/colorHighlight"
        android:textStyle="bold"
        android:text="@string/placeholder"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/trailertext_block"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemlist_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="@string/placeholder"
                android:textColor="@color/colorAuthor"/>
            <TextView
                android:id="@+id/itemlist_trailText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="@string/placeholder"/>


        </LinearLayout>

        <ImageView
            android:id="@+id/itemlist_image"
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_height"
            app:srcCompat="@drawable/placeholder_image"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemlist_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/small_padding"
            android:textColor="@color/colorCategory"
            android:text="@string/placeholder"/>

        <TextView
            android:id="@+id/itemlist_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/small_padding"
            android:text="@string/placeholder"
            android:layout_gravity="end"
            android:textAlignment="textEnd"/>

    </LinearLayout>

</LinearLayout>